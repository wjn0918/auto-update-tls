# Configuration for auto-update TLS certificates
# List of domains to monitor and auto-renew (comma-separated)
DOMAINS=ipify.catpd.cn,easybd.tools.catpd.cn

# Email address for Let's Encrypt registration
EMAIL=your-email@example.com

# Number of days before expiry to trigger renewal
THRESHOLD_DAYS=7

# Optional: Webroot path for webroot authentication (leave empty for standalone)
WEBROOT=/var/www/certbot

# Whether to use certbot for certificate management (true/false)
USE_CERTBOT=true

# Whether to reload nginx after certificate renewal (true/false)
UPDATE_NGINX=true
